<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/greyblue"
    tools:context="com.example.user.CURIFY.MsCalendar">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
    <android.support.v7.widget.Toolbar
        android:id="@+id/mstoolbar"
        android:transitionName="Mission"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#0D72A9"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        />
    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <CalendarView
        android:padding = "16dp"
        android:id="@+id/calendar_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#EBE6F2"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_row="0"
        android:layout_column="0">

    </CalendarView>

    <Button
        android:text="View Missions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vmission"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:theme="@style/AppTheme.Black"
        android:textColor="@color/white"
        android:layout_marginBottom="46dp"
        android:layout_marginLeft="20dp"/>

    <Button
        android:text="Current Mission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cmission"
        android:theme="@style/AppTheme.Black"
        android:textColor="@color/white"
        android:layout_alignBaseline="@+id/vmission"
        android:layout_alignBottom="@+id/vmission"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"/>

    </RelativeLayout>
</LinearLayout>